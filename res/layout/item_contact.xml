<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ContactLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/contactPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="60dip"
        android:src="@drawable/ic_launcher"/>
    
    

    <TextView
        android:id="@+id/contactname"
        android:text="Default Name"
        android:textColor="#E0E0E0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lastmsgcontent"
        android:layout_alignParentTop="true"
        android:textSize="20dp" />
    
    <TextView
        android:id="@+id/lastmsgcontent"
        android:text="Hej! This is the last message you got! Please answer or replace me with something meaningful..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contactPic"
        android:layout_toRightOf="@+id/contactPic"
        android:textColor="#6060FF"
        android:maxLines="1" 
        android:maxWidth="200dip"/>

</RelativeLayout>