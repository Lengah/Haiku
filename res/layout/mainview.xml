<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleview="http://schemas.android.com/apk/res/haiku.top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   	<ScrollView
       	android:id="@+id/scrollofcontacts"
       	android:layout_width="match_parent"
       	android:layout_height="match_parent" 
       	android:layout_marginRight="110dp"
       	android:scrollbars="none">
       	
   	     <LinearLayout 
      		android:id="@+id/listofcontacts"
       		android:layout_height="wrap_content"
	        android:layout_width="match_parent"
       		android:orientation="vertical">
       
   		</LinearLayout>
   	</ScrollView>
   	
   	<LinearLayout 
   	    android:id="@+id/smslayout"
   	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
   	     
   	    <LinearLayout
   	        android:id="@+id/pickedcontact_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal"
		    android:layout_marginRight="110dp">
		
		    <ImageView
		        android:id="@+id/pickedcontactpic"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:adjustViewBounds="true"
		        android:src="@drawable/delete_by_haiku_logo"/>
		    
		    
			<LinearLayout
			    android:id="@+id/pickedcontactnames_layout"
			    android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:orientation="vertical">
				    
			</LinearLayout>
			
			<ScrollView
		       	android:id="@+id/scrollofnames"
		       	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:layout_marginLeft="3dp"
		       	android:scrollbars="none">

			</ScrollView>
		
		</LinearLayout>
   	    
   	    <ScrollView
	       	android:id="@+id/scrollofsms"
	       	android:layout_width="match_parent"
	       	android:layout_height="match_parent" 
	       	android:layout_marginRight="110dp"
	       	android:layout_marginTop="10dp"
	       	android:scrollbars="none">
	       	
	   	     <RelativeLayout 
	      		android:id="@+id/listofsms"
	       		android:layout_height="wrap_content"
		        android:layout_width="match_parent"
	       		android:orientation="vertical">
	       
	   		</RelativeLayout>
	   	</ScrollView>
   	</LinearLayout>
   	
   	
</RelativeLayout>